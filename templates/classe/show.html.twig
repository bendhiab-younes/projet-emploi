{% extends 'base.html.twig' %}

{% block title %}Classe
{% endblock %}

{% block body %}
	<h1>Classe</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ classe.id }}</td>
			</tr>
			<tr>
				<th>NomClasse</th>
				<td>{{ classe.nomClasse }}</td>
			</tr>
		</tbody>
	</table>
	<a href="{{ path('app_classe_edit', {'id': classe.id}) }}">editer {{classe.nomClasse}}</a>
	<br>
	<br>
	<a href="{{ path('app_classe_index') }}">retour vers liste des classes</a>
	<br>
	<br>
	<h5>liste d'Etudiants</h5>
	<table class="table">
		<tbody>
			<tr>
				<th>CIN</th>
				<th>nom</th>
				<th>prenom</th>
			</tr>
			{% for etudiant in etudiants %}
				<tr>
					<td>{{ etudiant.CIN }}</td>
					<td>{{ etudiant.nom }}</td>
					<td>{{ etudiant.prenom }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<br>

	<h5>Matieres de
		{{classe.nomClasse}}</h5>
	<table class="table">
		<tbody>
			<tr>
				<th>matiere</th>
			</tr>
			{% for matiere in matieres %}
				<tr>
					<td>{{ matiere.nomMatiere }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{{ include('classe/_delete_form.html.twig') }}
{% endblock %}
