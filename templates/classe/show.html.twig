{% extends 'base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block body %}
    <h1>Classe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classe.id }}</td>
            </tr>
            <tr>
                <th>NomClasse</th>
                <td>{{ classe.nomClasse }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <h6>liste d'Etudiants</h6>
    <table class="table">
        <tbody>
            <tr>
                <th>CIN</th>
                <th>nom</th>
                <th>prenom</th>
            </tr>
            {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.CIN }}</td>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_classe_index') }}">back to list</a>

    <a href="{{ path('app_classe_edit', {'id': classe.id}) }}">edit</a>

    {{ include('classe/_delete_form.html.twig') }}
{% endblock %}
