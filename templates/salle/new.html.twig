{% extends 'base.html.twig' %}

{% block title %}New Classe{% endblock %}

{% block body %}
    <h1>Create new Classe</h1>

    {{ form_start(form) }}

    {{ form_row(form.nomClasse) }}
    {% if form.nomClasse.errors|length > 0 %}
        <div class="alert alert-danger">
            {{ form_errors(form.nomClasse) }}
        </div>
    {% endif %}

    {# Display other form fields if any #}
    
    <button type="submit" class="btn btn-primary">Create</button>

    {{ form_end(form) }}

    <a href="{{ path('app_classe_index') }}">back to list</a>
{% endblock %}
