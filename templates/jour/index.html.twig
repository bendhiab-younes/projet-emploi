{% extends 'base.html.twig' %}

{% block title %}Jour index{% endblock %}

{% block body %}
    <h1>Jour index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomJour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jour in jours %}
            <tr>
                <td>{{ jour.id }}</td>
                <td>{{ jour.nomJour ? jour.nomJour|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_jour_show', {'id': jour.id}) }}">show</a>
                    <a href="{{ path('app_jour_edit', {'id': jour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_jour_new') }}">Create new</a>
{% endblock %}
